<title>Formular</title>
<% include ../partials/header.ejs %>

<div class="row">

  <div class="col-md-6">
    <h1>Hello Page</h1>
    <ul>
      <% 
      if ((typeof errors !== 'undefined') && (typeof errors !== 'null')) {
        errors.forEach( item => {       
      %>
        <li> <%= item.msg %> </li>
      <%    
        });
      }
      %>
    </ul>   

    <form action="/hello" method="POST">
      <div class="form-group has-warning">
        <label for="nume">Nume</label>
        <input type="text" name="nume" id="nume" class="form-control form-control-warning">
      </div>
      <div class="form-group has-warning">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control form-control-warning">
      </div>   

      <button type="submit" class="btn">Submit</button>
    </form>

  </div>

</div> <!-- row -->

